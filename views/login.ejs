<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EduConnect - Connexion</title>
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
  </head>
  <body class="bg-light">
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
          <!-- Carte de connexion -->
          <div class="card shadow">
            <div class="card-body">
              <div class="text-center">
                <img src="/img/logo.png" alt="" srcset="" width="100px"
                height="100px" style="border-radius: 50%;"">
              </div>
              <!-- Formulaire de connexion -->
              <h2 class="card-title text-center mt-2">Connexion</h2>

              <% if (success_msg && success_msg.length > 0) { %>
                <div
                  class="d-flex justify-content-between align-items-center mb-4 alert alert-success"
                  role="alert"
                >
                  <%= success_msg[0] %>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="alert"
                    aria-label="Close"
                  ></button>
                </div>
                <% } %>

              <form accept="/users" method="post" id="loginForm" novalidate>
                <% if (erreur){ %>
                <div class="alert alert-danger" role="alert"><%= erreur %></div>
                <% } %> <% if (message){ %>
                <div class="alert alert-success" role="alert">
                  <%= message %>
                </div>
                <% } %>
                <div class="mb-3">
                  <input
                    type="email"
                    name="email"
                    class="form-control"
                    id="email"
                    placeholder="Adresse mail"
                  />
                </div>

                <div class="mb-3">
                  <input
                    type="password"
                    name="password"
                    class="form-control"
                    id="password"
                    placeholder="Mot de passe"
                  />
                </div>

                <input
                  type="submit"
                  class="btn btn-primary w-100 mb-3"
                  value="Se connecter"
                />
              </form>

              <div class="text-center">
                <a href="/users/reset-password" class="text-decoration-none">
                  Mot de passe oublié ?
                </a>
              </div>

              <hr />

              <div class="text-center">
                <a href="/users/register" class="btn btn-outline-primary mt-2">
                  Créer un compte
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scripts -->
    <script src="/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
