<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EduConnect - Connexion</title>
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
  </head>
  <body class="bg-light">
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
          <!-- Carte de connexion -->
          <div class="card shadow">
            <div class="card-body">
              <div class="text-center">
                <img src="/img/logo.png" alt="" srcset="" width="100px"
                height="100px" style="border-radius: 50%;"">
              </div>
              <!-- Formulaire de connexion -->
              <h2 class="card-title text-center mt-2">RÃ©initialisation</h2>

              <% if (error_msg && error_msg.length> 0) { %>
                <div class="d-flex justify-content-between align-items-center mb-4 alert alert-danger" role="alert">
                  <%= error_msg[0] %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %>
              <form accept="/users/reset-password" method="post" id="loginForm" novalidate>
                <div class="mb-3">
                  <input
                    type="email"
                    placeholder="Adresse mail"
                    name="email"
                    class="form-control"
                    id="email"
                  />
                </div>

                <div class="mb-3">
                  <input
                    type="password"
                    placeholder="Nouveau mot de pase"
                    name="password"
                    class="form-control"
                    id="password"
                  />
                </div>

                <div class="mb-3">
                  <input
                    type="password"
                    placeholder="Confirmer le mot de passe"
                    name="cpassword"
                    class="form-control"
                    id="password"
                  />
                </div>

                <input
                  type="submit"
                  class="btn btn-primary w-100 mb-3"
                  value="Modifier"
                />
              </form>
              <div class="text-center">
                <a href="/" class="btn btn-outline-primary mt-2">
                  Se connecter
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scripts -->
    <script src="/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
